<!-- Page Header -->
<header class="masthead" style="background-image: url('img/home-bg.jpg')">
    <div class="overlay"></div>
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-md-10 mx-auto">
                <div class="site-heading">
                    <h1>Super Blogger</h1>
                    <span class="subheading">Drop Some Word Bombs</span>
                </div>
            </div>
        </div>
    </div>
</header>

<!-- Main Content -->
<div class="container">
    <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
            {{#each blogs}}
            <div class="post-preview">
                <a href="blogs/{{this.id}}">
                    <h2 class="post-title">
                        {{this.title}}
                    </h2>
                    <h3 class="post-subtitle">
                        {{this.subtitle}}
                    </h3>
                </a>
                <p class="post-meta">Posted by
                    <a href="#">Yoan Ante</a>
                    on September 27</p>
            </div>
            <hr>
            {{/each}}
            <!-- Pager -->
            <div class="clearfix">
                <a class="btn btn-primary float-right" href="#">Older Posts &rarr;</a>
            </div>
        </div>
    </div>
</div>

<hr>